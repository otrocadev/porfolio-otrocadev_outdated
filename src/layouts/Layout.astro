---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title: string
  lang: string
}

const { title, lang } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Otrocadev's website" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/img/otrocadev-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-otrocadev-light w-screen text-lg sm:py-12 bg-[url('/img/protruding-squares.svg')]"
  >
    <div
      class="max-w-screen-2xl sm:h-[90dvh] sm:rounded-2xl bg-gradient-to-b from-slate-800 to-otrocadev-darkblue overflow-scroll mx-auto border-4 border-slate-400"
    >
      <Header lang={lang} />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo,
      Consolas, 'DejaVu Sans Mono', monospace;
    font-weight: normal;
  }
  h3 {
    margin-bottom: 2rem;
    font-size: 2.25rem;
    font-weight: bold;
    padding-top: 1rem;
    paddding-bottom: 1rem;
    color: #fc73fc;
  }
  h4 {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: bold;
  }
  strong {
    font-weight: bold;
    color: #a8fe5f;
  }
  blockquote {
    color: #a8fe5f;
  }
  .social-link {
    color: white;
  }
  .experience li {
    margin-left: 2rem;
  }
  .experience li:before {
    position: relative;
    left: -1.6rem;
    top: 1.8rem;
    font-size: 1.6rem;
    content: 'âœ“';
    color: #a8fe5f;
  }

  .aboutme a {
    text-decoration: underline;
    color: #a8fe5f;
    font-weight: bold;
  }
</style>
